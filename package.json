  "devDependencies": {
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.10.1",
    "@types/turndown": "^5.0.6",
    "dotenv": "^17.2.3",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@mendable/firecrawl-js": "^4.5.0",
    "@mozilla/readability": "^0.6.0",
    "ai": "6.0.0-beta.99",
    "cheerio": "^1.1.2",
    "exa-js": "^2.0.3",
    "isomorphic-dompurify": "^2.32.0",
