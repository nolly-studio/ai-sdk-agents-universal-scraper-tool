{
  "name": "ai-sdk-agents-universal-scraper-tool",
  "version": "1.0.0",
  "description": "AI SDK Agents Universal Scraper Tool",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nolly-studio/ai-sdk-agents-universal-scraper-tool.git"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts",
